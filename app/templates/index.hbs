<nav class="navbar navbar-default">
<div class="container">
  <div class="navbar-header">
    <a class="navbar-brand" href="/design">My little restaurant</a>
  </div>
</div>
</nav>

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <div class="row">
        {{#each model as |item|}}
          <div class="col-md-6">
            <div class="thumbnail menu-item">
              <img src="/images/burger-1.jpeg"/>
              <div class="caption">
                <h3 class="text-center">{{item.name}} -
                   <span data-price>{{number-to-currency item.price}}</span></h3>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
    <div class="col-md-5">
      {{outlet}}
    </div>
  </div>
</div>
