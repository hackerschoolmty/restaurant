<div class="container">
  <div class="row">
    <div class="col-md-7">
      <div class="row">
        {{#each model as |item|}}
        <div class="col-md-6">
          <div class="thumbnail menu-item" {{action "addItemToOrder" item}}>
            <img src="{{item.imageUrl}}"/>
            <div class="caption">
              <h3 class="text-center">
                <span>{{item.name}}</span> -
                <span data-price>{{number-to-currency item.price}}</span>
              </h3>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    <div class="col-md-5">
      {{outlet}}
    </div>
  </div>
</div>
